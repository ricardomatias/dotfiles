Xcursor*theme: Adwaita
Xcursor*size: 48

! URXVT - Settings
URxvt*locale: true

! appearance
URxvt.scrollBar: off
URxvt.saveLines: 10000
URxvt.internalBorder: 0
URxvt.externalBorder: 0

URxvt.iso14755: false

! extensions
URxvt.perl-ext-common: default,matcher,selection-to-clipboard,url-select,keyboard-select
URxvt.urlLauncher: /usr/bin/xdg-open
URxvt.matcher.button: 2
URxvt.selectToClipboard: true

URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.ISOLevel3-L: perl:url-select:select_next
URxvt.keysym.ISOLevel3-O: perl:keyboard-select:activate

URxvt.url-select.launcher: chromium
URxvt.url-select.underline: true

URxvt.clipboard.autocopy: true
URxvt.clipboard.copycmd: xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

! font config
Xft.dpi: 165
Xft.rgba: rgb
Xft.autohint: 0
Xft.antialias: 1
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.lcdfilter:  lcddefault

! rofi
rofi.color-enabled: true
rofi.hide-scrollbar: true
rofi.location: 2
rofi.lines: 5
rofi.opacity: 75
rofi.font: Dejavu Sans Mono 22

! rofi 		            'bg',    'fg',  'bgalt',  'hlbg',  'hlfg'
rofi.color-normal: #212326, #fff6e5, #34373C, #53585F, #fdd004
rofi.color-active: #212326, #fff6e5, #34373C, #53585F, #fdd004
rofi.color-window: #212326, #fff6e5, #34373C, #53585F, #fdd004

!rofi.color-urgent: #212326, #dc322f, #eee8d5, #dc322f, #fdf6e3


!fonts
!URxvt*font: xft:DejaVu Sans Mono:Mono:size=12,xft:FreeSerif:Mono:size=12
URxvt*font: xft:DejaVu Sans Mono:Mono:size=11,xft:FreeSerif:Mono:size=11
URxvt*boldFont: xft:DejaVu Sans Mono:bold:Mono:size=11,xft:FreeSerif:bold:Mono:size=11

