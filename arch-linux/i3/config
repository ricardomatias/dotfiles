# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#bindsym Mod1+Shift+a exec "keepassx ~/Documents/.private/database.kdbx -auto-type"

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  # bindsym j resize shrink width 10 px or 10 ppt
  # bindsym k resize grow height 10 px or 10 ppt
  # bindsym l resize shrink height 10 px or 10 ppt
  # bindsym semicolon resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status
  position top

  font pango:DejaVu Sans Mono 8

  colors {
    separator #666666
    background #222222
    statusline #dddddd
    focused_workspace #0088CC #0088CC #ffffff
    active_workspace #333333 #333333 #ffffff
    inactive_workspace #333333 #333333 #888888
    urgent_workspace #2f343a #900000 #ffffff
  }
}


# workspace tuning
workspace_auto_back_and_forth yes

bindsym $mod+l exec i3lock -n
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+z move container to workspace back_and_forth; workspace back_and_forth

# play
bindsym XF86AudioMute exec playerctl play-pause && killall -SIGUSR1 i3status
bindsym XF86AudioNext exec playerctl next && killall -SIGUSR1 i3status
bindsym XF86AudioPrev exec playerctl previous && killall -SIGUSR1 i3status

# volume control
bindsym XF86AudioPlay exec amixer -q set Master toggle && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 2dB- unmute && killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 2dB+ unmute && killall -SIGUSR1 i3status

# volume control (cherry)
bindsym F13 exec amixer -q set Master toggle && killall -SIGUSR1 i3status
bindsym F14 exec --no-startup-id amixer -q set Master 2dB- unmute && killall -SIGUSR1 i3status
bindsym F15 exec --no-startup-id amixer -q set Master 2dB+ unmute && killall -SIGUSR1 i3status

# brightness control
bindsym XF86MonBrightnessUp exec "xbacklight -inc 2.5"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 2.5"

bindsym XF86KbdBrightnessUp exec "kbdlight up 5"
bindsym XF86KbdBrightnessDown exec "kbdlight down 5"

# colors
client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000

set $i3exit ~/.i3/bin/i3exit

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id $i3exit lock, mode "default"
  bindsym e exec --no-startup-id $i3exit logout, mode "default"
  bindsym s exec --no-startup-id $i3exit suspend, mode "default"
  bindsym h exec --no-startup-id $i3exit hibernate, mode "default"
  bindsym r exec --no-startup-id $i3exit reboot, mode "default"
  bindsym Shift+s exec --no-startup-id $i3exit shutdown, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# bind to $mod+Power
bindcode $mod+124 mode "$mode_system"

# move workspace to output left|right
bindsym $mod+Control+Left move workspace to output left
bindsym $mod+Control+Right move workspace to output right

bindsym $mod+Shift+x debuglog toggle


